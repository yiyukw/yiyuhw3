<h1><%= @place.name %></h1>

<div class="row">
    <% for post in @place.posts %>

        <div class="col-3">
            <h4><%= post.title %></h4>
            <p><%= post.description %></p>
            <p><%= post.posted_on %></p>

</div>

<% end %>
</div>

<p>
<a href="/posts/new?place_id=<%=@place.id %>">new post</a>
</p>
<p>
<a href="/places">back to places</a>
</p>